pipeline {
    agent any

    tools {
        maven 'maven1'
    }

    stages {
        stage('checkout') {
            steps {
                echo 'Clone GIT HUB Repo = [Kubernetes]'
                git branch: 'main', url: 'https://github.com/Phanijagannadh/kubernetes.git'
            }
        }

        stage('sonar') {
            steps {
                echo 'scan project'
                sh 'ls -ltr'
                
                sh '''
                    mvn sonar:sonar \\
                        -Dsonar.host.url=http://54.206.73.214:9000/ \\
                        -Dsonar.login=squ_014b2072987acf842af6e7c33d68ce5a2379cc81  -X
                '''
            }
        }

        stage('Build Artifact') {
            steps {
                echo 'Build Artifact = Final .war file'
                sh 'mvn clean package'
            }
        }

        stage('Docker Image') {
            steps {
                    echo 'Docker Image build'
                    sh "docker build -t phanijagannadh/myproject:${BUILD_NUMBER} ."
            }
        }

        stage('Push to Dockerhub') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerpas')]) {
                        sh 'docker login -u phanijagannadh -p ${dockerpas}'
                    }
                    echo 'push image to Dockerhub'
                    sh "docker push phanijagannadh/myproject:${BUILD_NUMBER}"
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                echo 'Update Deployment File'
                withCredentials([string(credentialsId: 'gittoken', variable: 'gittoken')]) {
                    sh """
                        git config user.email "phanijagan91@gmail.com"
                        git config user.name "phani"
                        BUILD_NUMBER=${BUILD_NUMBER}
                        sed -i "s|myproject:.*|phanijagannadh/myproject:${BUILD_NUMBER}|g" deployment.yml
                        git add .
                        git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                       git pull https://${gittoken}@github.com/Phanijagannadh/kubernetes.git main --rebase
                       git push https://${gittoken}@github.com/Phanijagannadh/kubernetes.git HEAD:main
                    """
                }
            }
        }
    }
}
