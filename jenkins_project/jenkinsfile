// Installed "Maven" from jenkins Web directly
pipeline {
    agent any

       tools {
        maven 'maven1'
    }
stages {
      stage('checkout') {
            steps {
                echo 'Clone GIT HUB Repo = [Kubernetes] '
				git branch: 'main', url: 'https://github.com/Phanijagannadh/kubernetes.git'
            }  
        }
        stage('sonar') {
            steps {
                echo 'scan project'
                sh 'ls -ltr'
                
                sh ''' mvn sonar:sonar \\
                      -Dsonar.host.url=http://13.211.51.203:9000/ \\
                      -Dsonar.login=squ_014b2072987acf842af6e7c33d68ce5a2379cc81'''
            }
    	}
        stage('Build Artifact') {
            steps {
                echo 'Build Artifact = Final .war file'
				sh 'mvn clean package'
            }
        }
        stage('Docker Image') {
            steps {
                script {  // This is where Groovy code goes
            // Define the date variable
            def date = new Date().format('yyyyMMdd_HHmmss')
            // Build docker image
                echo 'Docker Image build'
				sh 'docker build -t phaniproject/type:${BUILD_NUMBER}-${JOB_NAME}-{date} .'
            }
        }
        }
		
         stage('Push to Dockerhub') {
            steps {
			 script {
			withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerpassword')]) { 
			{
            sh 'docker login -u phanijagannadh -p ${dockerpassword}'
			 }
               echo 'push image to Dockerhub'
			   sh 'docker push phaniproject/type:${BUILD_NUMBER}-${JOB_NAME}-{date}'
            }
           
				}
				
            }
        }
		
        stage('Update Deployment File') {
        
            steps {
                echo 'Update Deployment File'
				withCredentials([string(credentialsId: 'gittoken', variable: 'gittoken')]) {
                  sh '''
                    git config user.email "phanijagan91@gmail.com"
                    git config user.name "phani"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/type:.*/phaniproject/type:${BUILD_NUMBER}-${JOB_NAME}-{date}/g" deploymentfiles/deployment.yml
                    git add .
                    
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"

                    git push https://${gittoken}@github.com/Phanijagannadh/Terraform.git HEAD:main
                '''
				  
                 }
				
            }
        }
		
		
			
    }

}
